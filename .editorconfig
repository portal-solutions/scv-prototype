root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.css]
indent_size = 2
indent_style = space

[*.java]
indent_style = tab
tab_width = 4

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2
indent_style = space
